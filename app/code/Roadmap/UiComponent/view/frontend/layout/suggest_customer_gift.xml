<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Suggest your gift</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Suggest your Gift</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Roadmap\UiComponent\Block\SuggestGift"
                   template="Roadmap_UiComponent::suggest-gift.phtml"
                   name="suggest_customer_gift"/>
        </referenceContainer>
    </body>
</page>
